<resources>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.Abilify</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
    </style>


    <!-- Main App Theme -->
    <style name="Theme.Abilify" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


</resources>
